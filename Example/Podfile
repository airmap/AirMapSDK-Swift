use_frameworks!

target 'AirMapSDK-Example-iOS' do
	platform :ios, '8.0'
	pod 'AirMapSDK', :path => '../'
	pod 'Mapbox-iOS-SDK'
	pod 'SwiftTurf'
end

target 'AirMapSDK-Example-macOS' do
	platform :osx, '10.10'
	pod 'AirMapSDK', :path => '../'
end

target 'AirMapSDKTests' do
	platform :ios, '8.0'
	pod 'AirMapSDK', :path => '../'
	pod 'Mockingjay'
	pod 'Quick'
	pod 'Nimble'
end

post_install do |installer|
    installer.pods_project.targets.each do |target|
        target.build_configurations.each do |config|
            config.build_settings['SWIFT_VERSION'] = '2.3'
        end
    end
end
